#!/bin/bash 

template='"^ "$8" ^ "$9" ^ "$10'
# another template examples: '"^ "$8" ^ "$9" / "$10" ^ "$19'
#                            '"^ "$6'

separator='^'
separator0='/'
ignore_notpageviews=

while getopts ':t:s:f:p' opt ; do
    case $opt in
        t) template=$OPTARG ;;
        s) separator=$OPTARG ;;
        f) separator0=$OPTARG ;;
        p) ignore_notpageviews='|| $14 != "page view"' ;;
       \?) echo "Invalid option: -$OPTARG" >&2
           exit 1 ;;
        :) echo "Option -$OPTARG requires an argument" >&2
           exit 1 ;;
    esac
done

shift $((OPTIND-1))

awk -F'","' "NR < 2 $ignore_notpageviews {next} {print $template}" $1 |
    sort -f | uniq -ci | sort -nrs | column -t -s"$separator" -o'|' |
    hl -215 -b '^\s*\d+' -155 '\|' -225 "\s+\\$separator0\s+"

