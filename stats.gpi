if (!exists("datafile")) quit

set datafile separator ";"
set style data histogram
set key off
set style fill solid
unset border
unset xtics
set ytics nomirror scale 0 0
set rmargin 6
set lmargin 54

plot datafile using 2:0:2:(0.4):ytic(1) with boxxyerrorbars, \
                        '' using ($2*2 + 40):0:($2) with labels left

